{
  "functions": {
    "src/app/api/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "buildCommand": "npm run build-all",
  "installCommand": "npm install && pip install -r requirements.txt",
  "env": {
    "PYTHONPATH": "/usr/local/bin/python@3.13",
    "PIP_CACHE_DIR": "/tmp/pip-cache"
  }
}